@model Assigement_MVC.ViewModels.ProductNewViewModel
@{
    ViewData["Title"] = "New Category";
}


<div class="card-body">
    <h2 class="text-center" style="font-family: verdana;">Ny maträtt</h2>
</div>


<section>
    <div class="content">

        <form method="post" asp-controller="Product" asp-action="New">
            <div>
                <label asp-for="Name">Namn</label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>

            <div>
                <label asp-for="Price">Pirs</label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="field-validation-error"></span>
            </div>

            <div>
                <label asp-for="Description">Beskrivning</label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">Kategori</label>
                <select class="form-control"
                        asp-for="CategoryId"
                        asp-items="Model.AllCategoreis"></select>
                <span asp-validation-for="CategoryId" class="field-validation-error"></span>
            </div>


            <button style="background-color:orangered; margin-top:10px;" type="submit" class="btn btn-primary">Spara ändringen</button>

        </form>
    </div>
</section>
